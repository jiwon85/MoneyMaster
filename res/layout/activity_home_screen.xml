<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/GridLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:columnCount="2"
    android:orientation="horizontal"
    tools:context=".HomeScreen" >

    <Space
        android:layout_column="1"
        android:layout_gravity="fill_vertical"
        android:layout_row="7" />

    <ImageButton
        android:id="@+id/foodButton"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_column="0"
        android:layout_gravity="right|top"
        android:layout_row="1"
        android:contentDescription="@string/bills"
        android:padding="0dp"
        android:scaleType="centerInside"
        android:src="@drawable/foodbutton" />

    <ImageButton
        android:id="@+id/bigButton"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_column="0"
        android:layout_gravity="center_horizontal|top"
        android:layout_row="2"
        android:adjustViewBounds="false"
        android:contentDescription="@string/bills"
        android:padding="0dp"
        android:scaleType="centerInside"
        android:src="@drawable/bigbutton" />

    <ImageButton
        android:id="@+id/livingButton"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_column="0"
        android:layout_gravity="right|top"
        android:layout_row="3"
        android:contentDescription="@string/bills"
        android:padding="0dp"
        android:scaleType="centerInside"
        android:src="@drawable/livingbutton" />

    <ImageButton
        android:id="@+id/personalButton"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="3"
        android:contentDescription="@string/bills"
        android:padding="0dp"
        android:scaleType="centerInside"
        android:src="@drawable/personalbutton" />

    <ImageButton
        android:id="@+id/billsButton"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_column="0"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_row="0"
        android:contentDescription="@string/bills"
        android:padding="0dp"
        android:scaleType="centerInside"
        android:src="@drawable/billsbutton" />

    <ImageButton
        android:id="@+id/gasButton"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="1"
        android:contentDescription="@string/bills"
        android:padding="0dp"
        android:scaleType="centerInside"
        android:src="@drawable/gasbutton" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="200dp"
        android:layout_height="195dp"
        android:layout_column="0"
        android:layout_gravity="center_horizontal|top"
        android:layout_row="0"
        android:contentDescription="@string/bills"
        android:padding="0dp"
        android:scaleType="centerCrop"
        android:src="@drawable/mmlogo" />

</GridLayout>